@{
    ViewData["Title"] = "Home Page";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Calistoga&family=Playwrite+CU:wght@100..400&display=swap" rel="stylesheet">
<style>
    .image-container {
        position: relative;
        width: 600px; /* Ajusta el ancho según el tamaño de tus imágenes */
        height: 400px; /* Ajusta la altura según el tamaño de tus imágenes */
        margin: auto;
    }

    .bd {
        background-color: ghostwhite;
    }

    .image-container img {
        width: 100%;
        height: 100%;
        display: block;
    }

    .btn {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background-color: none;
        color: white;
        border: none;
        padding: 10px;
        cursor: pointer;
        font-size: 15px;
    }

    .btn-left {
        left: 0;
    }

    .btn-right {
        right: 0;
    }

    .btn:focus {
        outline: none;
    }

    .btn:hover {
        background-color: rgba(0, 0, 0, 0.7);
    }
    .subtitulo{
        font-family: "Playwrite CU", cursive;
        font-optical-sizing: auto;
        font-weight: <weight>;
        font-style: normal;
        text-align:center;

    }
</style>

<body class="bd">
    <header class="subtitulo">
        <h2>Bienvenidos/as</h2>

    </header>
    <div class="image-container">
        <button class="btn btn-left" onclick="changeImage(-1)">&#9664;</button>
        <img id="main-image2" src="img/comp3.png" alt="Imagen principal">
        <button class="btn btn-right" onclick="changeImage(1)">&#9654;</button>
    </div>

    <script>
        // Arreglo de imágenes
        let images = ['img/foto2.jpeg', 'img/lenguaje1.png', 'img/LogoSoftDoc.jpg', 'img/foto1.jpg', 'img/foto6.jpg'];
        let currentIndex = 0;

        function changeImage(direction) {
            // Actualizar el índice de la imagen actual
            currentIndex += direction;

            // Controlar el ciclo de las imágenes
            if (currentIndex < 0) {
                currentIndex = images.length - 1;
            } else if (currentIndex >= images.length) {
                currentIndex = 0;
            }

            // Cambiar la imagen mostrada
            document.getElementById('main-image2').src = images[currentIndex];
        }

        // Cambiar imagen automáticamente cada 2 segundos
        setInterval(function () {
            changeImage(1); // Cambiar a la siguiente imagen
        }, 4000);
    </script>
</body>